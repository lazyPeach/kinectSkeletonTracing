             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="300" Height="565">
  <Grid>
    <DataGrid Name="TableView" ItemsSource="{Binding Path=Data}" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="280" Height="520"/>
