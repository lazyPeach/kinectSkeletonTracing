<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SkeletonTracing" xmlns:View="clr-namespace:SkeletonTracing.View" x:Class="SkeletonTracing.MainWindow"
        Title="MainWindow" Height="600" Width="1000">

  <Grid>
    <Menu HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="992" Grid.ColumnSpan="2">
      <MenuItem Name="MainDTWMenu" Header="DTW_Main" Click="MainDTWMenu_Click"/>
      <MenuItem Name="GraphicsDTWMenu" Header="DTW_Graphic" Click="GraphicsDTWMenu_Click"/>
    </Menu>
    
    <View:DTWMain x:Name="mainDTW" HorizontalAlignment="Left" Height="540" Margin="0,20,0,0" VerticalAlignment="Top" Width="980" Visibility="Hidden"/>
    <View:DTWGraphic x:Name="graphicDTW" HorizontalAlignment="Left" Height="540" Margin="0,20,0,0" VerticalAlignment="Top" Width="980" Visibility="Visible"/>

  </Grid>
</Window>
