<UserControl x:Class="SkeletonTracing.SkeletonCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="520" d:DesignWidth="860" Background="Black">
  <Grid Background="White">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>

    <Canvas Name="templateCanvas" HorizontalAlignment="Center" Height="480" VerticalAlignment="Bottom" Width="420" Background="Black"/>
    <Canvas Name="sampleCanvas" HorizontalAlignment="Center" Height="480" VerticalAlignment="Bottom" Width="420" Background="Black" Grid.Column="1"/>
    <Label Content="Template" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
    <Label Content="Sample" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Grid.Column="1"/>
    <Viewbox HorizontalAlignment="Left" Height="520" VerticalAlignment="Top" Width="860" Grid.ColumnSpan="2"/>

  </Grid>
</UserControl>
