<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SkeletonTracing.View" x:Class="SkeletonTracing.View.DTWGraphic" 
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="979">

  <Grid>
    <ComboBox Name="boneCombo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="200" SelectionChanged="BoneCombo_SelectionChanged"/>
    <ComboBox Name="boneComponentCombo" HorizontalAlignment="Left" Margin="215,10,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="componentName_SelectionChanged"/>
    
    <ScrollViewer HorizontalAlignment="Left" Height="500" VerticalAlignment="Bottom" Width="980">
      <Grid Background="White">
        <Grid.ColumnDefinitions>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition/>
          <RowDefinition/>
        </Grid.RowDefinitions>
        <local:DTWPlot x:Name="signalPlot" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <local:DTWMatrixPlot x:Name="matrixPlot" HorizontalAlignment="Right" Grid.Row="1" Margin="0,0,10,0" VerticalAlignment="Top"/>
      </Grid>
    </ScrollViewer>
    <Button Name="showSignalsBtn" Content="Show signals" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="showSignalsBtn_Click"/>
    <Button Name="showMatrixBtn" Content="Show matrix" HorizontalAlignment="Right" Margin="0,10,95,0" VerticalAlignment="Top" Width="75" Click="showMatrixBtn_Click"/>

  </Grid>
